@model IEnumerable<Karnel_Travel_Project.bookingTran>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<style>
    #myBtran {
        font-weight: bold;
    }

    #booking {
        border-bottom: 1px solid white;
    }
</style>

<h2>Transport Booking Info</h2>

<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.btran_departure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.btran_arrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.btran_guests)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.btran_seats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.btran_contactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userDetail.u_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tranport.tran_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.btran_departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.btran_arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.btran_guests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.btran_seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.btran_contactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userDetail.u_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tranport.tran_name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.btran_id }, new { @class = "btn btn-outline-info btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.btran_id }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }

</table>
