@model IEnumerable<Karnel_Travel_Project.customer>

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<style>
    #myCust {
        font-weight: bold;
        border-bottom: 1px solid white;
    }
</style>

<h2>Customer</h2>

<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cust_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cust_contactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cust_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cust_nic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cust_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cust_contactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cust_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cust_nic)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.cust_id }, new { @class = "btn btn-outline-secondary btn-sm" }) |
                @Html.ActionLink("Details", "Details", new { id = item.cust_id }, new { @class = "btn btn-outline-info btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.cust_id }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }

</table>
