@model Karnel_Travel_Project.contact

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #myContact {
        border-bottom: 2px solid white;
        transition: ease-in-out 0.3s;
    }
</style>

<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container my-5">
        <form>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-row mb-3">
                @Html.LabelFor(model => model.cont_name, "Customer Name", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.cont_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your full name" } } )
                    @Html.ValidationMessageFor(model => model.cont_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row mb-3">
                @Html.LabelFor(model => model.cont_email, "Email Address", htmlAttributes: new { @class = "control-label col-md-12", @placeholder = "abc@def.com" } )
                <div class="col-md-12">
                    @Html.EditorFor(model => model.cont_email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cont_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row mb-3">
                @Html.LabelFor(model => model.cont_formType, "Form-type", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.cont_formType, new List<SelectListItem> {
                       new SelectListItem { Value = "Feedback" , Text = "Feedback" },
                       new SelectListItem { Value = "Query" , Text = "Query" }
                    }, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-row mb-3">
                @Html.LabelFor(model => model.cont_message, "Your message", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.cont_message, new { @class = "form-control", style = "height:200px;" })
                    @Html.ValidationMessageFor(model => model.cont_message, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-dark btn-block" />
            </div>
        </form>
    </div>
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>