@model Karnel_Travel_Project.bookingHot

@{
    ViewBag.Title = "BookingHot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<section class="form-booking">
    <div class="container my-5">
        <div class="container booking">
            <h2 class="text-center display-1">Hotel Booking</h2>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.bhot_contactNo, "Current Contact Number", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.bhot_contactNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bhot_contactNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.bhot_name, "Hotel Name", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("bhot_name", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.bhot_name, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-row mb-3">
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.bhot_departure, "Departure Time", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.bhot_departure, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.bhot_departure, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.bhot_arrival, "Arrival Time", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.bhot_arrival, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.bhot_arrival, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.bhot_guests, "No. of Guest", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.bhot_guests, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bhot_guests, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.bhot_rooms, "No. of Room", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.bhot_rooms, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.bhot_rooms, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Book Now" class="btn btn-dark btn-lg btn-block" />
                    </div>
                </div>
            </form>
        }

    </div>
</section>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('input[type=datetime]').datepicker({
            dateFormat: "dd/M/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "+0:+5"
        });

    });
</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>