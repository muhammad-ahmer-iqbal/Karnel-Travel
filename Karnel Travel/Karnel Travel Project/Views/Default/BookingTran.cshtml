@model Karnel_Travel_Project.bookingTran

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<section class="form-booking">
    <div class="container my-5">
        <div class="container booking">
            <h2 class="text-center display-1">Transport Booking</h2>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <form>

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.btran_contactNo, "Current Contact Number", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.btran_contactNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.btran_contactNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.btran_name, "Transport Name", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("btran_name", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.btran_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.btran_departure, "Departure Time", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.btran_departure, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.btran_departure, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-sm-6">
                            @Html.LabelFor(model => model.btran_arrival, "Arrival Time", htmlAttributes: new { @class = "control-label" })
                            <div class="">
                                @Html.EditorFor(model => model.btran_arrival, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.btran_arrival, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.btran_guests, "No. of Guest", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.btran_guests, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.btran_guests, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-row mb-3">
                        @Html.LabelFor(model => model.btran_seats, "No. of Seat", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.btran_seats, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.btran_seats, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Book Now" class="btn btn-dark btn-lg btn-block" />
                    </div>
                </div>
            </form>
        }
    </div>
</section>

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('input[type=datetime]').datepicker({
            dateFormat: "dd/M/yy",
            changeMonth: true,
            changeYear: true,
            yearRange: "+0:+5"
        });

    });
</script>