@model Karnel_Travel_Project.hotel

@{
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<style>
    #myHot {
        font-weight: bold;
    }

    #info {
        border-bottom: 1px solid white;
    }
</style>

<h2>Hotel Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.hot_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_country)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_country)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_charges)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_charges)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_roomAvailable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_roomAvailable)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hot_description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hot_img)
        </dt>

        <dd>
            <img src="@Url.Content(Model.hot_img)" alt="img" width="100" class="img-fluid" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.hot_id }, new { @class = "btn btn-dark btn-sm" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light btn-sm" })
</p>
